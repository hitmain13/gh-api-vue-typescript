{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "exclude": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": false,
    "types": ["vite-svg-loader", "vite/client"],
    "baseUrl": "."
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ],
}

